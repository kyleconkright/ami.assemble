                        {{/each}}
                    </ul>
                {{/if}}
            {{/each}}
            </ul>
        </div>

        <div id="services">
            <h2><img src="{{assets}}/img/icon-02.png"><br><a href="../services">{{homeContent.1.title}}</a></h2>
            <ul>
            {{# each homeContent.1.list}}
                <li><h3>{{entry.title}}</h3></li>
                {{#if entry.more}}
                    <ul>
                        {{# each entry.more}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                {{/if}}
            {{/each}}
            </ul>
        </div>

        <div id="contact">
            <h2><img src="{{assets}}/img/icon-03.png"><br><a href="../contact">Contact</a<</h2>
            <h3>{{contact.name}}</h3>
            <p>{{contact.street}}</p>
            <p>{{contact.city}}, {{contact.state}} {{contact.zip}}</p>
            <p>&nbsp;</p>
            <p><i class="fa fa-phone fa-fw"></i> {{contact.phone}}</p>
            <p><i class="fa fa-print fa-fw"></i> {{contact.fax}}</p>
            <p><i class="fa fa-envelope-o fa-fw"></i><a href="mailto:{{contact.email}}">{{contact.email}}</a></p>
